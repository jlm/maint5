-# locals: (item:)

tr data-testid=dom_id(item)
  td = link_to(item.number, item_path(item), class: "btn btn-sm btn-outline-secondary")
  td
    = item.minst&.name
    - if item.is_closed?
      br
      small.status Closed
  td = item.date
  td = item.standard
  td = item.clause
  td = item.subject
  td = item.draft
  td
    = link_to "Edit", edit_item_path(item), class: "me-2 btn btn-sm btn-outline-primary",
            data: { turbo_frame: "remote_modal" } if authorised
